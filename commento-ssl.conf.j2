server {
    listen                  [::]:443 ssl ipv6only=on;
    listen                  443 ssl;

    ssl_certificate         /var/www/commento/certs/fullchain.cer;
    ssl_certificate_key     /var/www/commento/certs/{{ DOMAIN_NAME }}.key;
    ssl_trusted_certificate /var/www/commento/certs/{{ DOMAIN_NAME }}.cer;
    server_name             {{ DOMAIN_NAME }};

    location / {
        proxy_pass          "http://127.0.0.1:8080";
    } 
}
